        visibility: hidden;
        min-width: 250px;
        margin: 0 auto;
        background-color: #333;
        color: #fff;
        text-align: center;
        border-radius: 5px;
        padding: 16px;
        position: fixed;
        z-index: 1000;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        transition: visibility 0.3s, opacity 0.3s ease-in-out;
        opacity: 0;
    }
    
    .toast.show {
        visibility: visible;
        opacity: 1;
    }
