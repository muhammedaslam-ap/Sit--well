   <script>
   async function handleAddToCart(productId) {
    const response = await fetch('/addToCart', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ productId }),
    });

    const result = await response.json(); // Assuming the server returns a JSON response

    if (result.success) {
        // If the product was already in the cart, change the button
        const button = document.getElementById(`add-to-cart-button-${productId}`);
        if (result.alreadyInCart) {
            button.textContent = 'Go to Cart';
            button.onclick = () => window.location.href = '/cart'; // Redirect to cart
        } else {
            button.textContent = 'Added to Cart';
        }
    } else {
        alert(result.error); // Show any error messages
    }
}
</script>
