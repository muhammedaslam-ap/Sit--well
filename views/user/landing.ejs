<!-- Include the viewport meta tag -->
<meta name="viewport" content="width=device-width, initial-scale=1">

<!-- Carousel Section with Breadcrumb Overlay -->
<section class="breadcrumb carousel_section position-relative">
    <div id="carouselExampleAutoplaying" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="3000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/uploads/product-images/carousel-2.webp" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/uploads/product-images/carousel-1.webp" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/uploads/product-images/carousel-3.webp" class="d-block w-100" alt="...">
            </div>
        </div>
        <!-- Carousel controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Breadcrumb text centered on top of the full-screen carousel -->
    <div class="breadcrumb_iner">
        <h2 class="text-red display-3">Sit Well</h2>
        <p class="text-white">Home <span></span></p>
    </div>
</section>


<!-- Category Product Area -->
<section class="cat_product_area section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Category List -->
                <div class="row mb-4">
                    <div class="col-lg-12">
                        <div class="category-container d-flex flex-wrap justify-content-start"> 
                            <% for (i = 0; i < category.length; i++) { %>
                            <div class="single_product_menu me-3 mb-2">
                                <p class="btn btn-outline-secondary"><%= category[i].name %></p>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
                <!-- Product Grid -->
                <div class="row align-items-center latest_product_inner">
                    <% for(i = 0; i < products.length; i++) { %>
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="single_product_item">
                            <a href="/productDetails/<%= products[i]._id %>">
                                <img class="default-img img-fluid" src="/uploads/product-images/<%= products[i].productImage[0] %>" alt="<%= products[i].productName %>">
                            </a>
                            <div class="single_product_text text-center mt-3">
                                <h4><%= products[i].productName %></h4>
                                <h3>
                                    <span class="indian-rupee"></span>
                                    <span style="text-decoration: line-through; color: #a0a0a0;">
                                        <%= products[i].regularPrice %>
                                    </span>
                                    &nbsp;&nbsp;
                                    <span class="indian-rupee"></span><%= products[i].salePrice %>
                                </h3>
                                <div class="product-actions mt-2">
                                    <a href="/addToCart?id=<%= products[i]._id %>" class="btn btn-primary btn-sm">+ Add to cart</a>
                                    <a href="/addToWhishlist?id=<%= products[i]._id %>" class="btn btn-outline-secondary btn-sm ms-2"><i class="ti-heart"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Best Seller Section -->
