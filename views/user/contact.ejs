
<%- include('../../views/partials/user/header.ejs') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(to bottom right, #f0f9ff, #e6f2ff);
    }
    .gradient-header {
        background: linear-gradient(to right, #bfc6d1, #b5aec2);
        color: white;
    }
    .contact-card {
        transition: transform 0.6s, box-shadow 0.6s;
    }
    .contact-card:hover {
        transform: scale(1);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175);
    }
    .container1{
        padding-top: 30px;
    }
</style>
    <!-- Contact Header -->
    <header class="gradient-header text-center py-5">
        <div class="container1">
            <h1 class="display-4 fw-bold mb-3">Connect with Sit-Well</h1>
            <p class="lead opacity-75">Have questions or feedback? We're here to help. Reach out and let's make your comfort our priority.</p>
        </div>
    </header>

    <!-- Contact Section -->
    <section class="container py-5">
        <div class="row g-4">
            <!-- Contact Form -->
            <div class="col-md-6">
                <div class="card contact-card shadow-lg">
                    <div class="card-body p-4">
                        <h2 class="card-title text-center mb-4">Send Us a Message</h2>
                        <form>
                            <div class="mb-3">
                                <label for="name" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="name" placeholder="Enter your full name" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="email" placeholder="Enter your email" required>
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">Your Message</label>
                                <textarea class="form-control" id="message" rows="5" placeholder="What can we help you with?" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary w-100 gradient-header">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="col-md-6">
                <div class="card contact-card mb-4 shadow-lg">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-geo-alt-fill text-primary me-3 fs-2"></i>
                            <h3 class="card-title mb-0">Our Office</h3>
                        </div>
                        <p class="text-muted">Sit-Well Furniture, 123 Comfort Ave, Cityville, State, 12345</p>
                    </div>
                </div>

                <div class="card contact-card shadow-lg">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-telephone-fill text-primary me-3 fs-2"></i>
                            <h3 class="card-title mb-0">Contact Details</h3>
                        </div>
                        <p class="text-muted">
                            <strong>Phone:</strong> (123) 456-7890<br>
                            <strong>Email:</strong> <a href="mailto:sitwell@gmail.com" class="link-primary">sitwell@gmail.com</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Location Section -->
    <section class="container py-5">
        <h2 class="text-center mb-4">Find Our Location</h2>
        <div class="ratio ratio-16x9 rounded-3 overflow-hidden shadow-lg">
            <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3239.953697086356!2d-122.43129748449448!3d37.773972179758746!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8085808f836f2a37%3A0x88e5a734ff7f93fc!2sSan%20Francisco%2C%20CA!5e0!3m2!1sen!2sus!4v1627559306623!5m2!1sen!2sus" 
                allowfullscreen 
                loading="lazy"
            ></iframe>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3">
        <p class="mb-0">&copy; 2024 Sit-Well Furniture. All rights reserved.</p>
        <small class="text-muted">Crafting comfort, one seat at a time.</small>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    <%- include('../../views/partials/user/footer.ejs') %>


