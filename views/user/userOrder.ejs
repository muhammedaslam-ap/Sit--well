<script>
 function confirmCancel(event) {
        event.preventDefault(); 

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes,  ok!'
        }).then((result) => {
            if (result.isConfirmed) {
                event.target.submit(); 
            }
        });
    }
    
    </script>
    
