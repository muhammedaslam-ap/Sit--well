    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const searchInputBox = document.getElementById('search_input_box');
            const searchIcon = document.getElementById('search_icon');  // Assuming there's a search icon element
            const closeSearch = document.getElementById('close_search');
    
            // Show search bar when search icon is clicked
            searchIcon.addEventListener('click', function() {
                searchInputBox.classList.add('active');
            });
    
            // Close search bar when close button is clicked
            closeSearch.addEventListener('click', function() {
                searchInputBox.classList.remove('active');
            });
        });


        function toggleUserMenu(button) {
            const menu = button.closest('.user-menu');
            menu.classList.toggle('active');
            
            // Close menu when clicking outside
            document.addEventListener('click', function closeMenu(e) {
                if (!menu.contains(e.target)) {
                menu.classList.remove('active');
                document.removeEventListener('click', closeMenu);
                }
            });
            }

            // Close menu when pressing Escape key
            document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                document.querySelector('.user-menu.active')?.classList.remove('active');
            }
            });
    </script>
    